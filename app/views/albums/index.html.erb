<% @page_title = "Albums" %>

<%= link_to("<<Back To Menu", {:controller => 'access', :action => 'index'}, :class => 'back_link') %>


<div class= "albums index">
	<h2>ALBUMS</h2>

	

	<%= link_to(image_tag('plus_sign.png', :size => '11 x 11', :alt => '+') +" Add New Album", {:action => 'new'}, :class => 'action new') %>

	<div><%= pluralize(@albums.size, 'album') %> found</div>
	<table class="listing" summary = "Album list">
		<tr class= "header">
			<!--<th>&nbsp;</th>-->
			<th>ID</th>
			<th>Artist ID</th>
			<th>Permalink</th>
			<th>Position</th>
			<th>Title</th>
			<th>Artist</th>
			<th>Year</th>
			<th>Summary</th>
			<th>Songs</th>
			<th>Actions</th>
		</tr>
		<% @albums.each do |album| %>
		<tr class="<%= cycle('odd', 'even') %>">
			<td><%= album.id %></td>
			<td><%= album.artist_id %></td>
			<td><%= album.permalink %></td>
			<td><%= album.position %></td>
			<td><%= album.name %></td>
			<td><%= album.album_artist %></td>
			<td><%= album.year %></td>
			<td><%= truncate(album.summary, :length => 60, :omission => "...") %></td>
			<td class="center"><%= album.songs.size %></td>
			<td class="actions">
				<%= link_to("Songs", {:controller => 'songs', :album_id => album.id}, :class => 'action show') %>
				<%= link_to("Show", {:action => 'show', :id => album.id}, :class => 'action show') %>
				<%= link_to("Edit", {:action => 'edit', :id => album.id}, :class => 'action edit') %>
				<%= link_to("Delete", {:action => 'delete', :id => album.id}, :class => 'action delete') %>
			</td>
		</tr>
		<% end %>
	</table>
</div>