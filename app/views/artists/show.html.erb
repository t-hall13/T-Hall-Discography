<% @page_title = "Artist Detail" %>

<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

	<div class="albums show">
		<h2>ARTIST DETAIL</h2>

		<table>
			<tr>
				<th>ID</th>
				<td><%= @artist.id %></td>
			</tr>
			<tr>
				<th>Artist</th>
				<td><%= @artist.name %></td>
			</tr>
		</table>
	</div>
	<!--<div class="albums-song-list">-->
		<!-- <table class="albums-song-list">-->
			<% @artist.albums.sorted.each do |album| %>
		<tr class="<%= cycle('odd', 'even') %>">
			<td><%= album.position %></td>
			<td><%= album.name %></td>
		</tr>
		<% end %>
